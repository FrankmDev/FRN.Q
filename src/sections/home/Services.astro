---
import { services } from "../../data/services";
import { siteConfig } from "../../data/site";
---

<section id="services" class="relative bg-background">
  
  {/* HEADER */}
  <header class="relative">
    <div class="h-1.5 bg-accent"></div>
    
    <div class="border-b border-foreground px-6 lg:px-16 py-4 flex justify-between items-center">
      <span class="font-mono text-[10px] tracking-[0.5em] text-muted-foreground uppercase">Section</span>
      <span class="font-black text-5xl text-foreground/10">02</span>
    </div>

    <div class="border-b border-foreground">
      <div class="px-6 lg:px-16 py-20 lg:py-28">
        
        <div class="services-label-wrapper flex items-center gap-3 mb-12">
          <span class="w-1.5 h-1.5 bg-accent"></span>
          <span class="services-label font-mono text-[10px] tracking-[0.4em] text-foreground uppercase">My Expertise</span>
        </div>

        <h2 class="services-hero-title font-black text-foreground leading-[0.75] tracking-[-0.04em] mb-16" style="font-size: clamp(4rem, 20vw, 16rem);">
          SERVICES
        </h2>

        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-12">
          <p class="services-hero-text text-xl lg:text-2xl text-foreground/70 max-w-xl leading-relaxed">
            I help brands <span class="text-accent font-medium">stand out</span> by crafting digital experiences that are meticulous and performant.
          </p>
          
          <div class="services-meta flex items-center gap-8">
            <div class="text-right">
              <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-1">Services</span>
              <span class="font-black text-5xl text-foreground">04</span>
            </div>
            <a href="#contact" class="services-cta-link group flex items-center justify-center w-14 h-14 border border-foreground hover:bg-foreground hover:text-background transition-all duration-300">
              <svg class="w-5 h-5 transform group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  {/* SERVICES LIST */}
  <div class="services-list border-b border-foreground">
    {services.map((service, index) => (
      <div
        class="service-row group relative cursor-pointer border-b border-foreground last:border-b-0 px-6 lg:px-16 py-8 lg:py-10 hover:bg-foreground/[0.02] transition-colors duration-300"
        data-index={index}
      >
        <div class="flex items-center gap-8 lg:gap-12">
          <span class="service-number font-mono text-sm text-muted-foreground group-hover:text-accent transition-colors w-8">
            {String(index + 1).padStart(2, "0")}
          </span>
          
          <h3 class="service-title flex-1 font-display font-black uppercase text-white group-hover:text-accent transition-colors duration-300 leading-[0.95]" style="font-size: clamp(1.25rem, 3.5vw, 2.5rem);">
            {service.title}
          </h3>
          
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted-foreground group-hover:text-accent transform group-hover:translate-x-1 transition-all duration-300 opacity-0 group-hover:opacity-100">
            <path d="M7 17L17 7M17 7H7M17 7V17" stroke-linecap="square" stroke-linejoin="miter"/>
          </svg>
        </div>
        
        <div class="absolute bottom-0 left-0 h-px bg-accent w-0 group-hover:w-full transition-all duration-500 ease-out"></div>
      </div>
    ))}
  </div>

  {/* CTA */}
  <div class="px-6 lg:px-16 border-b border-foreground">
    <a href={`mailto:${siteConfig.email}`} class="group block py-16 lg:py-20">
      <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-8">
        <div>
          <span class="font-mono text-[10px] tracking-[0.4em] text-muted-foreground uppercase block mb-3">Start a project</span>
          <span class="font-display font-black text-2xl md:text-4xl lg:text-5xl text-foreground group-hover:text-accent transition-colors">
            {siteConfig.email}
          </span>
        </div>
        <div class="w-14 h-14 border border-foreground group-hover:border-accent group-hover:bg-accent flex items-center justify-center transition-all duration-300">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-foreground group-hover:text-background">
            <path d="M7 17L17 7M17 7H7M17 7V17" stroke-linecap="square" stroke-linejoin="miter"/>
          </svg>
        </div>
      </div>
    </a>
  </div>
</section>

<style>
  #services .services-list .service-row .service-title {
    color: white;
  }
</style>

<script>
  function animateServices() {
    if (typeof window.gsap === "undefined") {
      setTimeout(animateServices, 50);
      return;
    }

    window.gsap.to(".service-row", {
      x: 0, opacity: 1, duration: 0.5, stagger: 0.08, ease: "power3.out",
      scrollTrigger: { trigger: ".services-list", start: "top 85%", toggleActions: "play none none reverse" }
    });
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", animateServices);
  } else {
    animateServices();
  }
</script>
