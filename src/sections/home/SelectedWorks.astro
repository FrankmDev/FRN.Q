---
import ProjectCard from "../../components/ui/ProjectCard.astro";
import { projects } from "../../data/projects";
---

<section id="works" class="relative bg-background">
  
  {/* HEADER */}
  <header class="relative">
    <div class="h-1.5 bg-accent"></div>
    
    <div class="border-b border-foreground px-6 lg:px-16 py-4 flex justify-between items-center">
      <span class="font-mono text-[10px] tracking-[0.5em] text-muted-foreground uppercase">Section</span>
      <span class="font-black text-5xl text-foreground/10">03</span>
    </div>

    <div class="border-b border-foreground">
      <div class="px-6 lg:px-16 py-20 lg:py-28">
        
        <div class="works-label-wrapper flex items-center gap-3 mb-12">
          <span class="w-1.5 h-1.5 bg-accent"></span>
          <span class="works-label font-mono text-[10px] tracking-[0.4em] text-foreground uppercase">Selected Works</span>
        </div>

        <h2 class="works-title font-black text-foreground leading-[0.75] tracking-[-0.04em] mb-16" style="font-size: clamp(4rem, 20vw, 16rem);">
          WORKS
        </h2>

        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-12">
          <p class="text-xl lg:text-2xl text-foreground/70 max-w-xl leading-relaxed">
            A curated selection of <span class="text-accent font-medium">{projects.length} projects</span> showcasing creative development.
          </p>
          
          <div class="works-meta flex items-center gap-8">
            <div class="text-right">
              <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-1">Projects</span>
              <span class="font-black text-5xl text-foreground">{projects.length}</span>
            </div>
            <a href="/lab" class="view-all-link group flex items-center justify-center w-14 h-14 border border-foreground hover:bg-foreground hover:text-background transition-all duration-300">
              <svg class="w-5 h-5 transform group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  {/* Projects */}
  <div class="projects-list">
    {projects.map((project, index) => (
      <ProjectCard {...project} index={index} />
    ))}
  </div>

  {/* Footer */}
  <div class="px-6 lg:px-16 py-12 border-t border-foreground">
    <div class="works-footer flex flex-col md:flex-row items-center justify-between gap-6">
      <span class="font-mono text-xs tracking-[0.2em] text-muted-foreground uppercase">
        © {new Date().getFullYear()} — All Projects
      </span>

      <a href="/lab" class="explore-link group flex items-center gap-4 font-mono text-sm tracking-wider uppercase">
        <span class="relative">
          Explore Lab
          <span class="absolute bottom-0 left-0 w-0 h-px bg-accent group-hover:w-full transition-all duration-300"></span>
        </span>
        <div class="w-10 h-10 border border-foreground group-hover:border-accent group-hover:bg-accent flex items-center justify-center transition-all duration-300">
          <svg class="w-4 h-4 text-foreground group-hover:text-background" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </div>
      </a>
    </div>
  </div>
</section>

<style>
  /* Animaciones manejadas por GSAP */
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.to(".works-footer", {
    y: 0, opacity: 1, duration: 0.6, ease: "power3.out",
    scrollTrigger: { trigger: ".works-footer", start: "top 90%", toggleActions: "play none none reverse" }
  });
</script>
