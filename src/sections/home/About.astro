---
const titleLetters = "ABOUT".split("");
const technologies = ["ASTRO", "NEXT.JS", "GSAP", "FRAMER", "ELEMENTOR"];
---

<section id="about" class="relative bg-background">
  
  {/* HEADER */}
  <header class="relative">
    {/* Top accent line */}
    <div class="h-1.5 bg-accent"></div>
    
    {/* Section bar */}
    <div class="border-b border-foreground px-6 lg:px-16 py-4 flex justify-between items-center">
      <span class="font-mono text-[10px] tracking-[0.5em] text-muted-foreground uppercase">Section</span>
      <span class="font-black text-5xl text-foreground/10">01</span>
    </div>

    {/* Main header */}
    <div class="border-b border-foreground">
      <div class="px-6 lg:px-16 py-20 lg:py-28">
        
        {/* Top label */}
        <div class="about-label-wrapper flex items-center gap-3 mb-12">
          <span class="w-1.5 h-1.5 bg-accent"></span>
          <span class="about-label font-mono text-[10px] tracking-[0.4em] text-foreground uppercase">Who I Am</span>
        </div>

        {/* Title - Full width massive */}
        <h2 class="about-title font-black text-foreground leading-[0.75] tracking-[-0.04em] mb-16" style="font-size: clamp(5rem, 22vw, 18rem);">
          {titleLetters.map((letter, i) => (
            <span class="about-letter inline-block hover:text-accent transition-colors duration-300" data-index={i}>
              {letter}
            </span>
          ))}
        </h2>

        {/* Bottom row: Description + Stats */}
        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-12">
          <p class="about-desc text-xl lg:text-2xl text-foreground/70 max-w-xl leading-relaxed">
            Creative developer building <span class="text-accent font-medium">digital experiences</span> that merge technical excellence with visual impact.
          </p>
          
          <div class="about-meta flex items-center gap-8">
            <div class="text-right">
              <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-1">Experience</span>
              <span class="font-black text-5xl text-foreground">03</span>
            </div>
            <a href="#contact" class="about-cta-link group flex items-center justify-center w-14 h-14 border border-foreground hover:bg-foreground hover:text-background transition-all duration-300">
              <svg class="w-5 h-5 transform group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </header>

  {/* STATS */}
  <div class="border-b border-foreground">
    <div class="grid grid-cols-2 lg:grid-cols-4">
      {[
        { label: "Years", value: "03" },
        { label: "Projects", value: "08" },
        { label: "Clients", value: "200+" },
        { label: "Technologies", value: "05" }
      ].map((stat, i) => (
        <div class={`about-stat group p-8 lg:p-12 ${i < 3 ? 'border-r border-foreground' : ''} ${i < 2 ? 'border-b lg:border-b-0 border-foreground' : ''}`}>
          <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-4">{stat.label}</span>
          <span class="about-stat-number font-black text-6xl lg:text-7xl text-foreground group-hover:text-accent transition-colors duration-300">{stat.value}</span>
        </div>
      ))}
    </div>
  </div>

  {/* CONTENT */}
  <div class="px-6 lg:px-16 py-20 lg:py-28">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 lg:gap-32">
      {/* Left */}
      <div class="about-section">
        <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-6">Background</span>
        <h3 class="font-display font-black text-3xl lg:text-4xl text-foreground uppercase leading-tight mb-6">
          Frontend Specialist
        </h3>
        <p class="text-lg text-foreground/70 leading-relaxed mb-8">
          Specializing in creative frontend development, interactive experiences, and modern web applications.
        </p>
        <div class="flex flex-wrap gap-3">
          {["React", "Astro", "TypeScript", "GSAP"].map(tech => (
            <span class="font-mono text-xs tracking-wider uppercase border border-foreground/30 px-4 py-2 hover:border-foreground hover:bg-foreground hover:text-background transition-all duration-300 cursor-default">
              {tech}
            </span>
          ))}
        </div>
      </div>

      {/* Right */}
      <div class="about-section">
        <span class="font-mono text-[10px] tracking-[0.3em] text-muted-foreground uppercase block mb-6">Tech Stack</span>
        <div class="space-y-0">
          {technologies.map((tech, i) => (
            <div class="tech-item group py-5 border-b border-foreground/20 flex items-center justify-between hover:pl-2 transition-all duration-300 cursor-default">
              <div class="flex items-center gap-4">
                <span class="font-mono text-sm text-muted-foreground w-6">0{i + 1}</span>
                <span class="font-display font-bold text-lg uppercase">{tech}</span>
              </div>
              <span class="w-1.5 h-1.5 bg-foreground/20 group-hover:bg-accent transition-colors rounded-full"></span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

</section>

<style>
  /* Animaciones manejadas por GSAP */
</style>

<script>
  function animateAbout() {
    if (typeof window.gsap === "undefined") {
      setTimeout(animateAbout, 50);
      return;
    }

    const gsap = window.gsap;

    gsap.to(".about-stat", {
      y: 0, opacity: 1, duration: 0.6, stagger: 0.08, ease: "power3.out",
      scrollTrigger: { trigger: ".about-stat", start: "top 85%", toggleActions: "play none none reverse" }
    });

    gsap.to(".about-section", {
      y: 0, opacity: 1, duration: 0.8, stagger: 0.15, ease: "power3.out",
      scrollTrigger: { trigger: ".about-section", start: "top 80%", toggleActions: "play none none reverse" }
    });

    gsap.to(".tech-item", {
      y: 0, opacity: 1, duration: 0.5, stagger: 0.06, ease: "power2.out",
      scrollTrigger: { trigger: ".tech-item", start: "top 85%", toggleActions: "play none none reverse" }
    });
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", animateAbout);
  } else {
    animateAbout();
  }
</script>
